<%- include('includes/head.ejs') %>
<%- include('includes/navbar.ejs') %>

<div class="container">
    <div class="row justify-content-center align-items-center">
        <form action="/login/log" method="post">
            <br><br><br>
            <div class="col-md-6">
                <label for="login" class="form-label">User Name:</label>
                <input type="text" class="form-control <%= valid[0] %>" id="login" name="login" required>
                <div class="text-danger invalid-feedback <%= hidden[0] %>">Username does not exist.</div>
            </div>
            <div class="col-md-6">
                <label for="password" class="form-label">Password:</label>
                <input type="password" class="form-control <%= valid[1] %>" id="password" name="password" required>
                <div class="text-danger invalid-feedback  <%= hidden[1] %>">Wrong password.</div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<%- include('includes/end.ejs') %>